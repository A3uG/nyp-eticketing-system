<%- include('../templates/head')-%>
<body>
    <%- include('../templates/navbar')-%>
    <div class="d-flex align-items-center vh-100-nav">
        <div class="container"> <!-- Always enclose everything in a container  -->
            <main role="main" class="inner cover"> <!-- Idk what this element does but every tutorial uses it so eh might as well use it  -->
                <form method="POST">
                    <div class="row justify-content-center h-100">
                        <div class="col-sm-8 col-12 text-center">
                            <span class="h1 font-weight-normal"><b>eTicketing</b> System</span>
                            <div class="mb-3"></div>
                        </div>
                        <div class="col-sm-8 col-12">
                            <div class="card input-card mt-3">
                                <div class="card-body input-card-body">
                                    <label for="email" class="card-input-label">
                                        <small class="card-subtitle mb-2 text-secondary font-weight-normal">Email Address</small>
                                    </label>
                                    <input id="email" name="email" class="form-control card-input" type="email" placeholder="e.g. user@mail.com"> 
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-8 col-12">
                            <div class="card input-card mt-3">
                                <div class="card-body input-card-body">
                                    <label for="password" class="card-input-label">
                                        <small class="card-subtitle mb-2 text-secondary font-weight-normal">Password</small>
                                    </label>
                                    <input id="password" name="password" class="form-control card-input" type="password" placeholder="Enter your password here"> 
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-8 col-12">
                            <div class="mt-4"></div>
                            <button  type="submit" class="btn btn-lg btn-primary w-100" submi>Login</button>
                        </div>
                    </div>
                </form>
            </main>
        </div>
    </div>
</body>

